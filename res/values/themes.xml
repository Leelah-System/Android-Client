<?xml version="1.0" encoding="UTF-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

  <style
    name="Theme.LeelahSystem"
    parent="android:Theme.Holo.Light"
  >
    <item name="android:actionBarStyle">@style/Widget.Holo.Light.ActionBar.Leelah</item>
  </style>

  <style
    name="Theme.LeelahSystem.NoTitle"
    parent="Theme.LeelahSystem"
  >
    <item name="android:windowNoTitle">true</item>
  </style>

  <style
    name="Theme.LeelahSystem.NoTitle.Fullscreen"
    parent="Theme.LeelahSystem.NoTitle"
  >
    <item name="android:windowFullscreen">true</item>
    <item name="android:windowContentOverlay">@null</item>
  </style>

  <style
    name="Theme.Dialog.LeelahSystem"
    parent="android:Theme.Dialog"
  />

  <style
    name="Theme.LeelahSystem.Transparent"
    parent="Theme.LeelahSystem"
  >
    <item name="android:windowBackground">@android:color/transparent</item>
    <item name="android:windowFrame">@null</item> 
    <item name="android:windowContentOverlay">@null</item>
    <item name="android:backgroundDimEnabled">true</item>
    <item name="android:windowIsTranslucent">true</item>
    <item name="android:windowNoTitle">true</item>
    <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
  </style>

</resources>
