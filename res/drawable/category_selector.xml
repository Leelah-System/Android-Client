<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:exitFadeDuration="@integer/listSelectionFadeDuration"
>
  <item
    android:state_activated="true"
    android:drawable="@drawable/category_selector_selected"
  />
  <item
    android:state_pressed="true"
    android:drawable="@drawable/category_selector_focused"
  />
  <item
    android:state_focused="true"
    android:drawable="@drawable/category_selector_focused"
  />
  <item
    android:state_selected="true"
    android:drawable="@drawable/category_selector_selected"
  />
  <item
    android:state_checked="true"
    android:drawable="@drawable/category_selector_selected"
  />
  <item android:drawable="@drawable/category_selector_default"/>
</selector>
