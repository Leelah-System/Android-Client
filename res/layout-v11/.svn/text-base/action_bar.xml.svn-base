<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="horizontal"
  android:layout_width="match_parent"
  android:layout_height="@dimen/barHeight"
>
  <TextView 
    android:id="@+id/customTitle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    style="@style/customActionBarTitle"
  />
  <LinearLayout 
    android:layout_width="wrap_content"
    android:layout_height="@dimen/barHeight"
    android:layout_alignParentRight="true"
  >
    <LinearLayout
      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:layout_height="@dimen/barHeight"
      android:layout_gravity="center_vertical"
      android:gravity="right"
    >
      <FrameLayout
        android:id="@+id/actionBarRefreshBlock"
        android:layout_width="@dimen/barHeight"
        android:layout_height="@dimen/barHeight"
        android:visibility="gone"
      >
        <ImageButton
          android:id="@+id/actionBarRefresh"
          android:src="@drawable/title_bar_refresh"
          android:visibility="gone"
          style="@style/titleBarButton"
        />
        <ProgressBar
          android:id="@+id/actionBarRefreshProgress"
          android:indeterminate="true"
          android:layout_width="24dip"
          android:layout_height="24dip"
          android:layout_gravity="center"
          android:visibility="gone"
          style="?android:attr/progressBarStyleInverse"
        />
      </FrameLayout>
      <LinearLayout
        android:id="@+id/titleBarAction1Block"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
      >
        <!--ImageView style="@style/titleBarSeparator"/-->
        <ImageButton
          android:id="@+id/titleBarAction1"
          style="@style/titleBarButton"
        />
      </LinearLayout>
      <LinearLayout
        android:id="@+id/titleBarAction2Block"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
      >
        <!--ImageView style="@style/titleBarSeparator"/-->
        <ImageButton
          android:id="@+id/titleBarAction2"
          style="@style/titleBarButton"
        />
      </LinearLayout>
      <LinearLayout
        android:id="@+id/titleBarAction3Block"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
      >
        <!--ImageView style="@style/titleBarSeparator"/-->
        <ImageButton
          android:id="@+id/titleBarAction3"
          style="@style/titleBarButton"
        />
      </LinearLayout>
      <LinearLayout
        android:id="@+id/titleBarAction4Block"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
      >
        <!--ImageView style="@style/titleBarSeparator"/-->
        <ImageButton
          android:id="@+id/titleBarAction4"
          style="@style/titleBarButton"
        />
      </LinearLayout>
    </LinearLayout>
  </LinearLayout>
</RelativeLayout>
